<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:text="Study Materials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvAboutQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Learn, practice Java, Web development, C# and so many prgramming languages for free.."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />


                <android.support.v7.widget.CardView
                    android:stateListAnimator="@anim/animation"
                    android:layout_marginTop="15dp"
                android:id="@+id/cardview_java_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Java"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:stateListAnimator="@anim/animation"
                android:layout_marginTop="15dp"
                android:id="@+id/cardview_software_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="Software Testing"
                    android:textColor="@android:color/black" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:stateListAnimator="@anim/animation"
                android:layout_marginTop="15dp"
                android:id="@+id/cardview_web_technology_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Web Technology"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:stateListAnimator="@anim/animation"
                android:layout_marginTop="15dp"
                android:id="@+id/cardview_big_data_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Big Data"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:stateListAnimator="@anim/animation"
                android:layout_marginTop="15dp"
                android:id="@+id/cardview_sap_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="Sap"
                    android:textColor="@android:color/black" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:stateListAnimator="@anim/animation"
                android:layout_marginTop="15dp"
                android:id="@+id/cardview_asp_net_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Asp.net"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:stateListAnimator="@anim/animation"
                android:layout_marginTop="15dp"
                android:id="@+id/cardview_oracle_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Oracle"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:stateListAnimator="@anim/animation"
                android:layout_marginTop="15dp"
                android:id="@+id/cardview_data_warehouse_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Data WareHouse"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:stateListAnimator="@anim/animation"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/cardview_java_script_study"
                card_view:cardBackgroundColor="#aae6f7"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Java Script"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</ScrollView>